{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["ES2022", "DOM"],
    "module": "ES2022",
    "moduleResolution": "Node",
    "noEmit": true,
    "paths": {
      "@fws/*": ["./frameworks/*"]
    },
    "resolveJsonModule": true,
    "strict": true,
    "target": "ES2022",
    "types": ["lit", "svelte", "vue"]
  },
  "include": ["./**/*.*"]
}
